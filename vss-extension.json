{
  "manifestVersion": 1,
  "id": "work-items-tagging-task",
  "version": "1.0.34",
  "name": "Tag Linked Work Items",
  "publisher": "ArtemSergeev",
  "description": "Automatically add specified tag to all work items associated with build or release",
  "categories": [
    "Build and release"
  ],
  "links":{
    "repository": {
      "uri" :"https://github.com/asergeev95/AddTagToBuildRelatedTasks"
    },
    "issues": {
      "uri": "https://github.com/asergeev95/AddTagToBuildRelatedTasks/issues"
    }
  },
  "icons": {
    "default": "images/logo.png"
  },
  "galleryFlags": [
    "Public"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": [
    "Release",
    "Build",
    "Work item tagging"
  ],
  "content": {
    "details": {
      "path": "extension.md"
    }
  },
  "branding": {
    "color": "#f97923",
    "theme": "dark"
  },
  "files": [
    {
      "path": "TagLinkedWorkItems/dist",
      "packagePath": "TagLinkedWorkItems/dist"
    },
    {
      "path": "TagLinkedWorkItems/node_modules",
      "packagePath": "TagLinkedWorkItems/node_modules"
    },
    {
      "path": "TagLinkedWorkItems/icon.png",
      "packagePath": "TagLinkedWorkItems/icon.png"
    },
    {
      "path": "TagLinkedWorkItems/task.json",
      "packagePath": "TagLinkedWorkItems/task.json"
    }
  ],
  "contributions": [
    {
      "id": "tag-linked-work-items",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "TagLinkedWorkItems"
      }
    }
  ]
